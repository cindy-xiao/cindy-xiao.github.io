
$(document).ready(function() {
	var scrollMagicController = new ScrollMagic();

	var tween = TweenMax.to("div", 0.5, {
	backgroundColor: 'red',
	color: "white"
	    });
	var scene = new ScrollScene({
		triggerElement: "div",
		offset: 150
	    });
	scene.setTween(tween);
	scene.addTo(scrollMagicController);
    });
